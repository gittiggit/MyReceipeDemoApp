<%= render "shared/page_title", title: "All receipes" %>

<%= will_paginate @receipe %>

<hr/>
<!--<% @receipe.each do |r| %>-->
<div class="row">
    <div class="col-md-2">
        <section class="chef_info center">
            <%= gravatar_for r.chef, size: 100 %>
            <h5>Chef name: <%= r.chef.chefname %></h5>
        </section>
    </div>
    <div class="col-md-6 well">
        <h4><%= link_to r.name, receipe_path(r) %></h4>
         <p><%= r.summary %></p>
         <p>
            <span class='quiet'><small>Created: <%= time_ago_in_words(r.created_at) %> ago, </small></span>
            <span class='quiet'><small>Updated: <%= time_ago_in_words(r.updated_at) %> ago</small></span>  
         </p> 
          <div class="pull-right">
                    <%= link_to like_receipe_path(r, like: true), method: :post do %>
                     <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= r.thumbs_up_total %>
                    <% end %> &nbsp&nbsp&nbsp&nbsp
                     <%= link_to like_receipe_path(r, like: false), method: :post do %>
                     <i class="glyphicon glyphicon-thumbs-down"></i>&nbsp <%= r.thumbs_down_total %>
                    <% end %>
          </div>
    </div>
    <div class="col-md-4">
        <%= image_tag(r.picture.url, size: "250x150", class: "gravatar") if r.picture %>
    </div>
</div>
<hr/>
<!--<% end %>-->

