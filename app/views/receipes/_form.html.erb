<%= render "shared/errors", obj: @receipe %>
<div class="row">
    <div class="well col-md-8 col-md-offset-2" >
       <%= form_for @receipe do |ob| %>
       <%= ob.label :name %>
       <%= ob.text_field :name %>
       
       <%= ob.label :summary %>
       <%= ob.text_field :summary%>
       
       <%= ob.label :description %>
       <%= ob.text_area :description, rows: 10 %>
       
       <%= ob.submit(@receipe.new_record? ? "Create receipe" : "Edit receipe", class:"btn btn-success") %>
       <% end %>
    </div>
</div>