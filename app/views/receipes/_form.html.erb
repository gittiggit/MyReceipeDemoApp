<%= render "shared/errors", obj: @receipe %>
<div class="row">
    <div class="well col-md-8 col-md-offset-2" >
       <%= form_for(@receipe, html: {multipart: true}) do |ob| %>
       <%= ob.label :name %>
       <%= ob.text_field :name %>
       
       <%= ob.label :summary %>
       <%= ob.text_field :summary%>
       
       <%= ob.label :description %>
       <%= ob.text_area :description, rows: 10 %>
       
       
       <span class="picture">
           <%= ob.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
       </span>
       <%= ob.submit(@receipe.new_record? ? "Create receipe" : "Edit receipe", class:"btn btn-success") %>
       
       <% end %>
    </div>
</div>

<script type="text/javascript">
    $('#receipe_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if(size_in_megabytes > 5){
            alert('Maximum file size is 5MB. Please choose a similar file');
        }
    });
</script>