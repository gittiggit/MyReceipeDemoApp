<%= render "shared/page_title", title: @receipe.name %>
<div class="row">
    <div class="col-md-4 pull-right center">
    <%= link_to gravatar_for(@receipe.chef, size: 200), chef_path(@receipe.chef) %>
    <p>
     <h5>Brought to you by <%= @receipe.chef.chefname %></h5>    
    </p>
    </div>
    <div class="col-md-8">
        
        <!--// if the receipe belongs to the current user, then show the edit link-->
        <% if logged_in? and @receipe.chef == current_user %>
        <%= link_to "Edit the receipe", edit_receipe_path(@receipe), class:"btn btn-success pull-right" %>
        <% end %>
        
        <h3><%= @receipe.summary %>
        <div class="show_receipe">
            <%= image_tag(@receipe.picture.url, class: "gravatar") if @receipe.picture? %>
        </div>
            <div class="well">
                <p>
                <strong>Steps:</strong>
                </p>
                <%= simple_format(@receipe.description) %>
                <div class="pull-right">
                    <%= link_to like_receipe_path(@receipe, like: true), method: :post do %>
                     <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= @receipe.thumbs_up_total %>
                    <% end %> &nbsp&nbsp&nbsp&nbsp
                     <%= link_to like_receipe_path(@receipe, like: false), method: :post do %>
                     <i class="glyphicon glyphicon-thumbs-down"></i>&nbsp <%= @receipe.thumbs_down_total %>
                    <% end %>
                </div>
            </div>    
        </h3>
    </div>
</div>

<h5><%= link_to "return to Receipes Listing", receipes_path, class: "btn btn-primary btn-small" %></h5>